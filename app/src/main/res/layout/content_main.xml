<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/LightGrey"
    android:orientation="horizontal"
    android:layout_marginTop="?android:attr/actionBarSize"
    tools:context=".view.ui.MainActivity">

    <LinearLayout
        android:id="@+id/loading_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparentBlack_50"
        android:gravity="center"
        android:translationZ="10dp"
        android:visibility="gone">

        <fr.castorflex.android.smoothprogressbar.SmoothProgressBar xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/progress_bar"
            android:layout_width="600dp"
            android:layout_height="50dp"
            android:indeterminate="true"
            app:spb_color="@color/colorPrimary"
            app:spb_mirror_mode="false"
            app:spb_progressiveStart_activated="true"
            app:spb_progressiveStart_speed="1.5"
            app:spb_progressiveStop_speed="3.4"
            app:spb_reversed="false"
            app:spb_sections_count="4"
            app:spb_speed="2.0"
            app:spb_stroke_separator_length="4dp"
            app:spb_stroke_width="4dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_menu"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/layout_invoice"
        tools:ignore="MissingConstraints">



        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:background="@color/White"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="5dp"
                        android:text="Recommended"
                        android:textColor="@color/colorPrimary"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <com.cooltechworks.views.shimmer.ShimmerRecyclerView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/recommended_shimmer_recyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:shimmer_demo_child_count="8"
                        app:shimmer_demo_layout="@layout/shimmer_menu_item"
                        app:shimmer_demo_layout_manager_type="linear_horizontal"
                        app:shimmer_demo_angle="20"
                        />

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rv_recommended"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:paddingBottom="15dp"></android.support.v7.widget.RecyclerView>


                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:background="@color/White"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="5dp"
                        android:text="Car Wash"
                        android:textColor="@color/colorPrimary"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <com.cooltechworks.views.shimmer.ShimmerRecyclerView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/car_wash_shimmer_recyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:shimmer_demo_child_count="8"
                        app:shimmer_demo_layout="@layout/shimmer_menu_item"
                        app:shimmer_demo_layout_manager_type="linear_horizontal"
                        app:shimmer_demo_angle="20"
                        />

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rv_car_wash"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:paddingBottom="15dp"></android.support.v7.widget.RecyclerView>


                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:background="@color/White"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="5dp"
                        android:text="Car Care"
                        android:textColor="@color/colorPrimary"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <com.cooltechworks.views.shimmer.ShimmerRecyclerView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/car_care_shimmer_recyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:shimmer_demo_child_count="8"
                        app:shimmer_demo_layout="@layout/shimmer_menu_item"
                        app:shimmer_demo_layout_manager_type="linear_horizontal"
                        app:shimmer_demo_angle="20"
                        />

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rv_car_care"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:paddingBottom="15dp"></android.support.v7.widget.RecyclerView>


                </LinearLayout>


            </LinearLayout>
        </ScrollView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/divider"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/Grey"
        android:orientation="horizontal"
        app:layout_constraintRight_toLeftOf="@id/layout_invoice">

    </LinearLayout>


    <android.support.constraint.ConstraintLayout
        android:background="@color/White"
        android:id="@+id/layout_invoice"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="243dp">

        <Button
            android:id="@+id/button_invoice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:padding="15dp"
            android:text="Pelanggan"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textAllCaps="false"
            android:textSize="24sp"/>


        <RelativeLayout
            android:id="@+id/relativeLayout2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toTopOf="@id/total_layout"
            app:layout_constraintTop_toBottomOf="@id/button_invoice">

            <LinearLayout
                android:id="@+id/date_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:padding="10dp"
                    android:text="Tanggal "
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@id/btn_checkout" />

                <TextView
                    android:id="@+id/date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:padding="10dp"
                    android:textAlignment="textEnd"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@id/btn_checkout" />

            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_invoiceItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/date_layout">

            </android.support.v7.widget.RecyclerView>

            <ImageView
                android:id="@+id/img_emptyCart"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/empty_cart" />
        </RelativeLayout>


        <Button
            android:id="@+id/btn_checkout"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@color/colorPrimary"
            android:text="Lanjutkan"
            android:textColor="@color/White"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent" />

        <LinearLayout
            android:id="@+id/total_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintBottom_toTopOf="@id/btn_checkout">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:padding="10dp"
                android:text="Total "
                android:textColor="@color/colorPrimary"
                android:textSize="28sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@id/btn_checkout" />

            <TextView
                android:id="@+id/total_textview_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:padding="10dp"
                android:textAlignment="textEnd"
                android:textSize="28sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@id/btn_checkout" />

        </LinearLayout>


    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>