<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="osac.digiponic.com.osac">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".view.ui.MemberActivity"
            android:label="@string/title_activity_member"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity android:name=".view.ui.LoginActivity" />
        <activity
            android:name=".view.ui.MemberRegistration"
            android:theme="@style/NoActionBar" />
        <activity android:name=".view.ui.PoliceNumberInput" />
        <activity android:name=".view.ui.ConfigActivity" />
        <activity
            android:name=".view.ui.SplashScreen"
            android:theme="@style/NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".print.AdminActivity"
            android:theme="@style/NoActionBar" />
        <activity
            android:name=".view.ui.BrandSelection"
            android:theme="@style/NoActionBar" />
        <activity
            android:name=".print.DeviceList"
            android:theme="@style/NoActionBar" />
        <activity
            android:name=".view.ui.MainActivity"
            android:theme="@style/NoActionBar" />
        <activity
            android:name=".print.DeviceActivity"
            android:theme="@style/NoActionBar" />
        <activity
            android:name=".view.ui.PaymentActivity"
            android:theme="@style/NoActionBar" />
        <activity android:name=".view.ui.PaymentSuccessActivity" />
        <activity android:name=".view.ui.NumpadDialog" />
    </application>

</manifest>